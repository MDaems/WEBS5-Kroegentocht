<!doctype html>
<html>
<head>
    <% include ../partials/head %>
</head>
<body>
    <header>
        <% include ../partials/header %>
    </header>
    <div class="container">
        <div class="page-header text-center">
            <h1><span class="fa fa-anchor"></span> Profiel</h1>
        </div>
        <div class="row">
            <% if(user.local.email != undefined) { %>
            <!-- LOCAL INFORMATION -->
                <div class="well">
                    <h3><span class="fa fa-user"></span> Local</h3>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>role</strong>: <%= user.role %><br>
                    </p>
                </div>

            <%}%>
            <% if(user.facebook.id != undefined) { %>
                <div class="well">
                    <h3><span class="fa fa-facebook"></span> Facebook</h3>
                    <p>
                        <strong>id</strong>: <%= user.facebook.id %><br>
                        <strong>username</strong>: <%= user.username %><br>
                        <strong>email</strong>: <%= user.facebook.email %><br>

                    <div style='width: 750px; word-break: break-all; word-wrap: break-word;'>
                        <strong>token</strong>:
                        <%= user.facebook.token %>
                    </div>
                    </p>
                </div>

            <%}%>
            <% if(user.google.id != undefined) { %>
                <div class="well">
                    <h3><span class="fa fa-google-plus"></span> Google</h3>
                    <p>
                        <strong>id</strong>: <%= user.google.id %><br>
                        <strong>email</strong>: <%= user.google.email %><br>
                        <div style='width: 750px; word-break: break-all; word-wrap: break-word;'>
                        <strong>token</strong>:
                        <%= user.google.token %>
                    </div>
                    </p>
                </div>

            <%}%>
        </div>

    </div>
</body>
</html>